@using SchoolTemplate.Database;
@model PersonModel
@{
    ViewData["Title"] = "contact";
}

<head>
    <link rel="stylesheet" href="~/css/contact.css" />
</head>


<html>
<head>
    <title>Contact us</title>
    <link rel="stylesheet" type="text/css" href="style.css">
    <link href="https://fonts.googleapis.com/css?family=Quicksand&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0">
</head>
<body>
    <div class="container">
        <form method="post" class="contact-box">
            
            <div class="left">
                <textarea type="text" name="commentaar" placeholder="Stel hier uw vraag..." style="height:200px"></textarea><br />
                @Html.ValidationMessageFor(m => m.commentaar) <br />
                @if (ViewData["formsuccess"] == "ök")
                {
                    <p class="answer"> Bedankt voor het invullen!</p>
                }
            </div>
            
            <div class="right">
                <h2>Contact Us</h2>
                <input type="text" name="voornaam" placeholder="Voornaam" /> <br />
                @Html.ValidationMessageFor(m => m.voornaam) <br />
                <input type="text" name="achternaam" placeholder="Achternaam" /> <br />
                @Html.ValidationMessageFor(m => m.achternaam) <br />
                <input type="text" name="email" placeholder="E-mail" /> <br />
                @Html.ValidationMessageFor(m => m.email) <br />
                <input type="date" name="geb_datum" placeholder="YYYY-MM-DD" /> <br />
                @Html.ValidationMessageFor(m => m.geb_datum) <br />
                <input type="submit" value="Verstuur" />
            </div>
        </form>
    </div>
</body>
</html>