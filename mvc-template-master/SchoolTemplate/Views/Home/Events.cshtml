@using SchoolTemplate.Database;
@model List<Event>
@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="~/css/event.css" />
</head>

<body style="text-align: left; color: white">
    @foreach (Event e in Model)
    {
    <p class="border">
        <a class="link" href="http://localhost:56349/details">
            @e.Plaats<br />
            @e.Datumtijd.ToString("yyyy-MM-dd HH:mm")
        </a>

    </p>

    }

</body>